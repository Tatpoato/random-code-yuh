import random
import time

a = False


def clear_console():
    print("\n" * 100)


tupl = ("stein", "saks", "papir")

ramount = 0
bscore = 0
ties = 0
score = 0
kaka = 0
min = 1
max = 100
vvalg = ""
wincon = {
    "saks": "papir",
    "stein": "saks",
    "papir": "stein"
}

losecon = {
    "saks": "stein",
    "stein": "papir",
    "papir": "saks"
}

føkkdeg = r"""
         / \
        |\_/|
        |---|
        |   |
        |   |
      _ |=-=| _
  _  / \|   |/ \
 / \|   |   |   ||\
|   |   |   |   | \>
|   |   |   |   |   \
| -   -   -   - |)   )
|                   /
 \                 /
  \               /
   \             /
    \           /

"""

mainlogo = r"""


 /$$$$$$$   /$$$$$$   /$$$$$$  /$$   /$$           /$$$$$$$   /$$$$$$  /$$$$$$$  /$$$$$$$$ /$$$$$$$             /$$$$$$  /$$$$$$  /$$$$$$   /$$$$$$   /$$$$$$  /$$$$$$$   /$$$$$$  /$$
